{
  "name": "shared-typescript",
  "version": "1.0.0",
  "dependencies": {
    "popsicle": "^9.1.0",
    "winston": "^2.4.0",
    "winston-mongodb": "^3.0.1"
  },
  "scripts": {
    "clean": "del-cli 'coverage' '**/*.js' '**/*.d.ts' '!node_modules/**'",
    "build": "tsc -p ./",
    "add": "git add --all",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register test/**/*.ts",
    "cover": "npm run clean && nyc --all --reporter=html --reporter=text-summary mocha --compilers ts:ts-node/register,tsx:ts-node/register test/**/*.ts"
  },
  "pre-commit": {
    "run": [
      "clean",
      "add",
      "build",
      "add"
    ],
    "silent": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.50",
    "chai": "^4.1.2",
    "del-cli": "^1.1.0",
    "mocha": "^4.0.1",
    "nock": "^9.1.0",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  }
}
