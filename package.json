{
  "name": "shared-typescript",
  "version": "1.0.0",
  "dependencies": {
    "popsicle": "^9.1.0",
    "winston": "^2.3.1",
    "winston-mongodb": "^2.0.10"
  },
  "scripts": {
    "clean": "rimraf coverage",
    "build": "tsc -p ./",
    "add": "git add --all",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register test/**/*.ts",
    "cover": "nyc --all --reporter=html --reporter=text-summary mocha --compilers ts:ts-node/register,tsx:ts-node/register test/**/*.ts"
  },
  "pre-commit": {
    "run": [
      "build",
      "add"
    ],
    "silent": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.0",
    "mocha": "^3.4.2",
    "nock": "^9.0.14",
    "nyc": "^11.0.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "ts-node": "^3.2.1",
    "tsc": "^1.20150623.0",
    "typescript": "^2.4.1"
  }
}
